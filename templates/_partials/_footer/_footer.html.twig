        <div class="fw-semibold mb-3">Contact</div>
        <ul class="list-unstyled text-secondary mb-0">
          <li class="mb-2">
            <span class="text-light fw-semibold">Téléphone :</span> +33 6 00 00 00 00
          </li>
          <li class="mb-2">
            <span class="text-light fw-semibold">Email :</span> contact@exemple.com
          </li>
          <li>
            <span class="text-light fw-semibold">Adresse :</span> Paris, France
          </li>
        </ul>
      </div>

      {# Horaires (AJAX) #}
      <div class="col-12 col-lg-3">
        <div class="fw-semibold mb-3">Horaires</div>

        <div id="openingHoursLoading" class="text-secondary small">
          <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
          Chargement...
        </div>

        <ul id="openingHoursList" class="list-unstyled mb-0 d-none"></ul>

        <div id="openingHoursError" class="alert alert-dark border-secondary small py-2 d-none mb-0">
          Impossible de charger les horaires.
        </div>

        {# Social (on garde ton bloc social ici sous les horaires) #}
        <div class="d-flex gap-2 mt-3">
          <a href="#" class="btn btn-outline-light btn-sm">Facebook</a>
          <a href="#" class="btn btn-outline-light btn-sm">Instagram</a>
          <a href="#" class="btn btn-outline-light btn-sm">LinkedIn</a>
        </div>
      </div>

    </div>

    <hr class="border-secondary my-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
      <div class="text-secondary small">
        © {{ "now"|date("Y") }} Votre société — Tous droits réservés.
      </div>

      <div class="d-flex gap-3 small">
        <a class="link-light text-decoration-none" href="#">Mentions légales</a>
        <a class="link-light text-decoration-none" href="#">Politique de confidentialité</a>
        <a class="link-light text-decoration-none" href="#">Cookies</a>
      </div>
    </div>
  </div>

  {# ✅ AJAX horaires #}
  <script>
    (async function loadOpeningHours() {
      const url = "{{ path('app_opening_hours_json') }}";

      const loading = document.getElementById('openingHoursLoading');
      const list = document.getElementById('openingHoursList');
      const error = document.getElementById('openingHoursError');

      function show(el, yes) {
        el.classList.toggle('d-none', !yes);
      }

      try {
        const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        const data = await res.json();

        if (!res.ok || !data || !data.ok) throw new Error('Bad response');

        list.innerHTML = data.items.map(item => {
          const right = item.closed
            ? '<span class="text-secondary">Fermé</span>'
            : `<span class="text-light">${item.open} - ${item.close}</span>`;

          return `
            <li class="d-flex justify-content-between gap-3 mb-2 small">
              <span class="text-secondary">${item.label}</span>
              ${right}
            </li>
          `;
        }).join('');

        show(loading, false);
        show(error, false);
        show(list, true);

      } catch (e) {
        console.error('Opening hours load error:', e);
        show(loading, false);
        show(list, false);
        show(error, true);
      }
    })();
  </script>
</footer>
