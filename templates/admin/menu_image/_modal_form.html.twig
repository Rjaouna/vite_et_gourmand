<div class="p-2">
  <div class="p-3 rounded-4 border bg-white">
    <div class="d-flex align-items-center gap-2 mb-3">
      <i class="bi bi-image fs-4 text-primary"></i>
      <h5 class="fw-bold mb-0">{{ title }}</h5>
    </div>

    {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
      <div class="row g-3">
        <div class="col-12">{{ form_row(form.file) }}</div>
        <div class="col-md-8">{{ form_row(form.altText) }}</div>
        <div class="col-md-2">{{ form_row(form.position) }}</div>
        <div class="col-md-2 d-flex align-items-end">{{ form_row(form.isCover) }}</div>
      </div>

      <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary btn-lg">
          <i class="bi bi-check2-circle me-1"></i> Enregistrer
        </button>
        <button type="button" class="btn btn-outline-secondary btn-lg" data-bs-dismiss="modal">
          Annuler
        </button>
      </div>
    {{ form_end(form) }}
  </div>
</div>
